bindsym XF86MonBrightnessDown exec "xbacklight -dec 10"

# Multimedia Keys
# increase volume
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+ unmute
# decrease volume
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%- unmute
# mute volume
bindsym XF86AudioMute exec amixer -q set Master mute
# pause / play / next / previous
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# start i3bar to display a workspace bar
bar {
  position top
  i3bar_command i3bar
  status_command i3blocks
  tray_output primary

  bindsym button4 nop
  bindsym button5 nop

  strip_workspace_numbers yes

  colors {
    background #282a36
    statusline #f8f8f2
    separator #666666

    focused_workspace  #f8f8f8 #f8f8f8 #282a36
    active_workspace   #595B5B #353836 #FDF6E3
    inactive_workspace #282a36 #282a36 #f8f8f8
    binding_mode       #16a085 #2C2C2C #F9FAF9
    urgent_workspace   #595B5B #FDF6E3 #E5201D
  }
}

# Set shut down, restart and locking features
bindsym $mod+0 mode "$mode_system"
set $mode_system (l)ock, (s)uspend, (e) logout, (h)ibernate, (r)eboot, (p)shutdown
mode "$mode_system" {
    bindsym l mode "default", exec --no-startup-id $scripts/i3exit.sh lock
    bindsym s mode "default", exec --no-startup-id $scripts/i3exit.sh suspend
    bindsym e mode "default", exec --no-startup-id $scripts/i3exit.sh logout
    bindsym h mode "default", exec --no-startup-id $scripts/i3exit.sh hibernate
    bindsym r mode "default", exec --no-startup-id $scripts/i3exit.sh reboot
    bindsym p mode "default", exec --no-startup-id $scripts/i3exit.sh shutdown

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

