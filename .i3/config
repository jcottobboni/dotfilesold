exec_always xrdb -merge ~/.Xresources

set $mod Mod4

font pango: Fira Code Retina 9

# APP VARIABLES
set $browser    firefox
set $music      spotify
set $term urxvt -g 42x12
set $dmenu      i3-dmenu-desktop
set $rofi       rofi -show run

# DIR VARIABLES
set $scripts ~/.scripts

# RESIZE VARIABLES
set $center move absolute position center
